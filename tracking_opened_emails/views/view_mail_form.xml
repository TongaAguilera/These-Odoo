<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_mail_form">
            <field name="name">View Mail Form</field>
            <field name="model">mail.mail</field>
            <field name="inherit_id" ref="mail.view_mail_form"/>
            <field name="arch" type="xml">
                <field name="state" position="replace">
                    <field name="state" widget="statusbar" statusbar_visible="outgoing,sent,opened,received,exception,cancel"/>
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="view_mail_tree">
            <field name="name">View Mail Tree</field>
            <field name="model">mail.mail</field>
            <field name="inherit_id" ref="mail.view_mail_tree"/>
            <field name="arch" type="xml">
               <tree string="attributes" decoration-muted="(state in ('sent', 'cancel'))" decoration-info="(state=='outgoing')" decoration-danger="(state=='exception')" decoration-primary="(state=='received')" decoration-success="(green:state=='opened')">
               </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_mail_search">
            <field name="name">View Mail Search</field>
            <field name="model">mail.mail</field>
            <field name="inherit_id" ref="mail.view_mail_search"/>
            <field name="arch" type="xml">
               <filter name="received" position="after">
                        <filter icon="STOCK_OPEN" name="opened" string="Opened" domain="[('state','=','opened')]"/>
               </filter>
            </field>
        </record>
    </data>
</odoo>